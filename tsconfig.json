{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "resolveJsonModule": true,
      "paths": {
        "views/*": ["../src/views/*"],
        "public/*": ["../src/public/*"]
      }
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "src/public",
      "src/views"
    ]
}
